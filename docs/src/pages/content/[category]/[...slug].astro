---
import Layout from '../../../layouts/Layout.astro';

type MarkdownPage = {
  file: string;
  frontmatter: {
    title?: string;
    description?: string;
  };
  Content: any;
};

export async function getStaticPaths() {
  let docPages: MarkdownPage[] = [];
  let imageDocPages: MarkdownPage[] = [];
  let imageSourcePages: MarkdownPage[] = [];

  try {
    docPages = await Astro.glob<{ title?: string; description?: string }>('../../../content/docs/*.md');
  } catch (e) {
    // Content not generated yet
  }

  try {
    imageDocPages = await Astro.glob<{ title?: string; description?: string }>('../../../content/image-docs/*.md');
  } catch (e) {
    // Content not generated yet
  }

  try {
    imageSourcePages = await Astro.glob<{ title?: string; description?: string }>('../../../content/image-sources/*.md');
  } catch (e) {
    // Content not generated yet
  }

  const docPaths = docPages.map((page: MarkdownPage) => {
    const slug = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { category: 'docs', slug },
      props: { page },
    };
  });

  const imageDocPaths = imageDocPages.map((page: MarkdownPage) => {
    const slug = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { category: 'image-docs', slug },
      props: { page },
    };
  });

  const imageSourcePaths = imageSourcePages.map((page: MarkdownPage) => {
    const slug = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      params: { category: 'image-sources', slug },
      props: { page },
    };
  });

  return [...docPaths, ...imageDocPaths, ...imageSourcePaths];
}

const { page } = Astro.props as { page: MarkdownPage };
const { Content } = page;
const { title = 'Untitled', description } = page.frontmatter;
---

<Layout title={title} description={description}>
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm p-8">
    <article class="prose dark:prose-invert max-w-none">
      <Content />
    </article>
  </div>
</Layout>
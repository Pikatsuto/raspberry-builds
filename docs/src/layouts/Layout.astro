---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Documentation for Raspberry Pi hybrid image builder' } = Astro.props;
const base = import.meta.env.BASE_URL;

// Get all docs and images for navigation
let docPages = [];
let imageDocPages = [];
let imageSourcePages = [];

try {
  docPages = await Astro.glob('../content/docs/*.md');
} catch (e) {
  // Content not generated yet
}

try {
  imageDocPages = await Astro.glob('../content/image-docs/*.md');
} catch (e) {
  // Content not generated yet
}

try {
  imageSourcePages = await Astro.glob('../content/image-sources/*.md');
} catch (e) {
  // Content not generated yet
}

const sortedDocs = docPages
  .map(page => {
    const filename = page.file.split('/').pop().replace('.md', '');
    return {
      url: `${base}/content/docs/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

const sortedImageDocs = imageDocPages
  .map(page => {
    const filename = page.file.split('/').pop().replace('.md', '');
    return {
      url: `${base}/content/image-docs/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

const sortedImageSources = imageSourcePages
  .map(page => {
    const filename = page.file.split('/').pop().replace('.md', '');
    return {
      url: `${base}/content/image-sources/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${base}/favicon.svg`} />
    <title>{title} - Raspberry Pi Builds</title>
  </head>
  <body class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <img loading="eager" fetchpriority="high" src={`${base}/HeroBackground.webp`} alt="" class="blur-lg fixed -z-50 -translate-x-1/2 inset-x-1/2 -inset-y-full w-[2353px] h-[1969px] object-cover max-w-[unset]">

    <div class="container mx-auto px-4 opacity-80">
      <!-- Header -->
      <header class="py-8 border-b border-gray-200 dark:border-gray-800">
        <div class="flex items-center justify-between">
          <div>
            <a href={base} class="flex items-center space-x-3">
              <img src={`${base}/favicon.svg`} alt="Raspberry Pi Builds Logo" class="w-20 h-20">
              <div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                  Raspberry Pi Builds
                </h1>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  Hybrid Debian ARM64 Images for Raspberry Pi
                </p>
              </div>
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <a
              href="https://github.com/Pikatsuto/raspberry-builds"
              target="_blank"
              class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-200 hover:text-gray-900 dark:hover:text-white"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.840 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          </div>
        </div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 py-8">
        <!-- Sidebar Navigation -->
        <aside class="lg:col-span-3">
          <nav class="sticky top-8 space-y-1">
            <a
              href={base}
              class="flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Home
            </a>
            <a
              href={`${base}/releases`}
              class="flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Releases
            </a>
            <a
              href={`${base}/pre-releases`}
              class="flex items-center px-4 py-2 text-sm font-medium rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Pre Releases
            </a>

            <div class="border-t border-gray-200 dark:border-gray-700 my-4"></div>

            <div class="space-y-1">
              <p class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">
                Documentation
              </p>
              {sortedDocs.map(doc => (
                <a
                  href={doc.url}
                  class="flex items-center px-4 py-2 text-sm rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  {doc.title}
                </a>
              ))}
            </div>

            <div class="border-t border-gray-200 dark:border-gray-700 my-4"></div>

            <div class="space-y-1">
              <p class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">
                Image Docs
              </p>
              {sortedImageDocs.map(img => (
                <a
                  href={img.url}
                  class="flex items-center px-4 py-2 text-sm rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
                  </svg>
                  {img.title}
                </a>
              ))}
            </div>

            <div class="border-t border-gray-200 dark:border-gray-700 my-4"></div>

            <div class="space-y-1">
              <p class="px-4 py-2 text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase">
                Image Sources
              </p>
              {sortedImageSources.map(img => (
                <a
                  href={img.url}
                  class="flex items-center px-4 py-2 text-sm rounded-md text-gray-700 dark:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                >
                  <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                  {img.title}
                </a>
              ))}
            </div>
          </nav>
        </aside>

        <!-- Main Content -->
        <main class="lg:col-span-9">
          <slot />
        </main>
      </div>

      <!-- Footer -->
      <footer class="py-8 border-t border-gray-200 dark:border-gray-800 mt-12">
        <div class="text-center text-sm text-gray-600 dark:text-gray-400">
          <p>
            Built with
            <a href="https://astro.build" target="_blank" class="text-blue-600 hover:underline">Astro</a>
          </p>
          <p class="mt-2">
            &copy; {new Date().getFullYear()} Raspberry Pi Builds Project
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
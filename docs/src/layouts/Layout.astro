    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("custom-translate-btn");
        const menu = document.getElementById("custom-translate-menu");
        if (!btn || !menu) {
          console.error("Translate button/menu introuvable dans le DOM");
          return;
        }

        // Toggle menu
        btn.addEventListener("click", (e) => {
          e.stopPropagation();
          menu.classList.toggle("hidden");
        });

        // Close on outside click
        document.addEventListener("click", (e) => {
          if (!btn.contains(e.target)) menu.classList.add("hidden");
        });

        // Utility : visually mark selected language
        function markActive(lang) {
          document.querySelectorAll("#custom-translate-menu button").forEach(b => {
            if (b.dataset.lang === lang) {
              b.classList.add("bg-gray-100", "dark:bg-gray-700");
            } else {
              b.classList.remove("bg-gray-100", "dark:bg-gray-700");
            }
          });
        }

        // Attach click handlers to menu buttons (they will use the google select when available)
        document.querySelectorAll("#custom-translate-menu button").forEach(item => {
          item.addEventListener("click", (e) => {
            e.stopPropagation();
            const lang = item.dataset.lang;
            markActive(lang);

            // If Google select is present, use it
            const select = document.querySelector("select.goog-te-combo");
            if (select) {
              select.value = lang;
              select.dispatchEvent(new Event("change"));
              menu.classList.add("hidden");
              console.log("Requested language via select:", lang);
              return;
            }

            // Fallback: try to set cookie + reload (fallback tr√®s rare)
            try {
              // cookie name used by Google Translate: googtrans (format /source/lang)
              document.cookie = "googtrans=/en/" + lang + ";path=/";
              // reload to let Google widget pick cookie (some setups)
              window.location.reload();
            } catch (err) {
              console.error("Impossible de changer la langue (fallback)", err);
            }
          });
        });

        // Wait for the google select to appear: use MutationObserver + interval fallback
        const waitForSelect = (cb) => {
          const existing = document.querySelector("select.goog-te-combo");
          if (existing) return cb(existing);

          const observer = new MutationObserver((mutations, obs) => {
            const sel = document.querySelector("select.goog-te-combo");
            if (sel) {
              obs.disconnect();
              cb(sel);
            }
          });
          observer.observe(document.body, { childList: true, subtree: true });

          // interval fallback (cleared when cb called)
          const iv = setInterval(() => {
            const sel = document.querySelector("select.goog-te-combo");
            if (sel) {
              clearInterval(iv);
              observer.disconnect();
              cb(sel);
            }
          }, 300);
        };

        waitForSelect((select) => {
          console.log("Google Translate select trouv√©");
          // When Google select changes (user or programmatic), reflect it in our menu
          select.addEventListener("change", () => {
            const v = select.value;
            console.log("Google select changed:", v);
            markActive(v);
          });

          // Initialize visual state from the select if possible
          markActive(select.value || 'en');
        });
      });
    </script>

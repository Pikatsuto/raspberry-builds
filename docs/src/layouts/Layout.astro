---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Documentation for Raspberry Pi hybrid image builder' } = Astro.props;
const base = import.meta.env.BASE_URL;

// Get all docs and images for navigation
type MarkdownPage = {
  file: string;
  frontmatter: {
    title?: string;
    description?: string;
  };
};

let docPages: MarkdownPage[] = [];
let imageDocPages: MarkdownPage[] = [];
let imageSourcePages: MarkdownPage[] = [];

try {
  docPages = await Astro.glob<{ title?: string; description?: string }>('../content/docs/*.md');
} catch (e) {
  // Content not generated yet
}

try {
  imageDocPages = await Astro.glob<{ title?: string; description?: string }>('../content/image-docs/*.md');
} catch (e) {
  // Content not generated yet
}

try {
  imageSourcePages = await Astro.glob<{ title?: string; description?: string }>('../content/image-sources/*.md');
} catch (e) {
  // Content not generated yet
}

const sortedDocs = docPages
  .map((page: MarkdownPage) => {
    const filename = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      url: `${base}/content/docs/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

const sortedImageDocs = imageDocPages
  .map((page: MarkdownPage) => {
    const filename = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      url: `${base}/content/image-docs/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

const sortedImageSources = imageSourcePages
  .map((page: MarkdownPage) => {
    const filename = page.file.split('/').pop()?.replace('.md', '') || '';
    return {
      url: `${base}/content/image-sources/${filename}`,
      title: page.frontmatter.title || 'Untitled'
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title));

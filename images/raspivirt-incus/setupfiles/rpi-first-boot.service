[Unit]
Description=Raspberry Pi First Boot Configuration
After=network.target systemd-networkd.service incus.service incus-startup.service
Wants=incus.service
Requires=network.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/rpi-first-boot.sh
StandardOutput=journal+console
StandardError=journal+console
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target